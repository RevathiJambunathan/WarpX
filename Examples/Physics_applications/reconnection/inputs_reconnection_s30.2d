ions.density_function(x,y,z) = "nbi + (ndi-nbi) * (cosh((x + xcs)/delta)**-1 + cosh((x - xcs)/delta)**-1)"
ions.momentum_distribution_type = maxwell_juttner
ions.bulk_vel_dir = y
ions.cell_size = 0.0078
ions.cell_centered = true
ions.xcs = 1.
