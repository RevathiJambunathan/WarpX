#################################
############ FIELD ##############
#################################
warpx.B_ext_grid_init_style="parse_B_ext_grid_function"
warpx.Bx_external_grid_function(x,y,z) = "0"
warpx.By_external_grid_function(x,y,z) = "0"
warpx.Bz_external_grid_function(x,y,z) = "-1* Bo * 2. / (pi/2. + 5. - 1.) * (atan(tanh((x+xcs)/2./delta)) - atan(tanh((x-xcs)/2./delta)) - pi/4. + 1./2. * (5. - 1.) * (tanh((x+xcs)/delta) - tanh((x-xcs)/delta) - 1.) )"
warpx.IncludeBfieldPerturbation = 1
warpx.xcs = 1
warpx.B0 = 1
warpx.nd_ratio = 5.0
warpx.delta = 0.1
